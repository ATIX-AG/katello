%table.repo_table{:style=>'display: none;'}
  %thead
    %th
      = _('Errors')
  %tbody
    %td
      %i.icon-exclamation-sign
      = _("There was an error attempting to retrieve the repository list:")
      %pre
        = error_message
      = _("For more information see ")
      %a{:href => main_app.foreman_tasks_task_path(task.id)}
        = _("the failed task.")
